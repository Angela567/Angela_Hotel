@{
    ViewData["Title"] = "Inicio";
    Layout = null;
    var rol = Context.Session.GetInt32("RolUsuario");
    var nombre = ViewBag.NombreUsuario;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Hotel</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        body {
            background: linear-gradient(to right, #1E90FF, #00BFFF);
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .home-container {
            background: #fff;
            padding: 2rem 3rem;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 500px;
            text-align: center;
        }

            .home-container h1 {
                color: #1E90FF;
                margin-bottom: 1rem;
            }

            .home-container p {
                font-size: 1.1rem;
                margin-bottom: 2rem;
            }

            .home-container .btn {
                display: inline-block;
                padding: 0.75rem 1.5rem;
                border-radius: 8px;
                font-size: 1rem;
                text-decoration: none;
                margin: 0.5rem;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

        .btn-admin {
            background-color: #32CD32;
            color: white;
        }

            .btn-admin:hover {
                background-color: #28a428;
            }

        .btn-user {
            background-color: #1E90FF;
            color: white;
        }

            .btn-user:hover {
                background-color: #1a75cc;
            }

        .btn-logout {
            background-color: #FF6347;
            color: white;
            border: none;
        }

            .btn-logout:hover {
                background-color: #cc4e3b;
            }
    </style>
</head>
<body>
    <div class="home-container">
        <h1>Hola, @nombre</h1>
        <p>Has iniciado sesión correctamente en el sistema.</p>

        @if (rol == 1)
        {
            <!-- Admin -->
            <a href="@Url.Action("Index", "Usuario")" class="btn btn-admin">Gestionar Usuarios</a>
        }
        else
        {
            <!-- Cliente -->
            <a href="@Url.Action("Index", "Reserva")" class="btn btn-user">Reservar Habitación</a>
        }

        <form asp-action="Logout" method="post">
            <button type="submit" class="btn btn-logout">Cerrar Sesión</button>
        </form>
    </div>
</body>
</html>
