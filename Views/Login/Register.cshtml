@model Angela_Hotel.Models.Usuario
@{
    ViewData["Title"] = "Registro";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro - Hotel</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <style>
        /* Mismos estilos del login */
        * {
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        body {
            background: linear-gradient(to right, #1E90FF, #00BFFF);
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .register-container {
            background: #fff;
            padding: 2rem 3rem;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 400px;
        }

        .register-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #1E90FF;
        }

        .form-group {
            margin-bottom: 1.2rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #333;
        }

        .form-group input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 1rem;
        }

        .form-group input:focus {
            border-color: #1E90FF;
            outline: none;
        }

        .register-btn {
            width: 100%;
            padding: 0.75rem;
            background-color: #32CD32;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .register-btn:hover {
            background-color: #28a428;
        }

        .login-link {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.9rem;
        }

        .login-link a {
            color: #1E90FF;
            text-decoration: none;
        }

        .login-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="Registro-container">
        <h2>Registro de Usuario</h2>
        <form asp-action="register" method="post">
            <div class="form-group">
                <label for="Nombre">Nombre completo</label>
                <input asp-for="Nombre" type="text" id="Nombre" required />
            </div>

            <div class="form-group">
                <label for="Correo">Correo electrónico</label>
                <input asp-for="Correo" type="email" id="Correo" required />
            </div>
            <div class="form-group">
                <label for="Contrasena">Contraseña</label>
                <input asp-for="Contrasena" type="password" id="Contrasena" required />
            </div>
            <button type="submit" class="register-btn">Registrarse</button>
        </form>
        <div class="login-link">
            ¿Ya tienes una cuenta? <a href="@Url.Action("Index", "Login")">Inicia sesión</a>
        </div>
    </div>
</body>
</html>
