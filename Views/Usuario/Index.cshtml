
@model IEnumerable<Angela_Hotel.Models.Usuario>
@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Hotel</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to right, #1E90FF, #00BFFF);
            margin: 0;
            padding: 0;
        }

        .container {
            margin: 3rem auto;
            max-width: 900px;
            background: white;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        h2 {
            color: #1E90FF;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table th, table td {
            padding: 0.8rem;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        table th {
            color: #1E90FF;
        }

        .btn {
            padding: 0.5rem 1rem;
            border-radius: 8px;
            text-decoration: none;
            color: white;
            font-size: 0.9rem;
            margin-right: 0.3rem;
        }

        .btn-crear {
            background-color: #32CD32;
        }

        .btn-editar {
            background-color: #FFA500;
        }

        .btn-eliminar {
            background-color: #FF6347;
        }

        .acciones {
            white-space: nowrap;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Lista de Usuarios</h2>
        <p><a href="@Url.Action("Create")" class="btn btn-crear">Agregar Usuario</a></p>
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Rol</th>
                    <th class="acciones">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Correo</td>
                        <td>@usuario.NombreRol</td>
                        <td class="acciones">
                            <a class="btn btn-editar" href="@Url.Action("Edit", new { id = usuario.ID_Usuario })">Editar</a>
                            <a class="btn btn-eliminar" href="@Url.Action("Delete", new { id = usuario.ID_Usuario })" onclick="return confirm('¿Estás seguro de eliminar este usuario?')">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

